@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- "Hero" bölümü -->
<div class="container my-5">

    <!-- GÜNCELLENDİ: "bg-white" ve "shadow-sm" eklendi -->
    <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 bg-white shadow-sm">

        <!-- Sol Sütun (Başlık, Yazı ve Buton) -->
        <div class="col-lg-6 p-3 p-lg-5 pt-lg-3">
            <h1 class="display-4 fw-bold lh-1 text-body-emphasis">
                Etüt Arkadaşım ile çalışmak artık çok kolay.
            </h1>
            <p class="lead mt-4">
                Mühendislik öğrencileri için ders ve proje arkadaşı bulma platformu.
                Sizinle aynı dersleri alan öğrencileri keşfedin, eşleşin ve birlikte çalışmaya başlayın.
            </p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4 mb-lg-3 mt-5">
                <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg px-4 me-md-2 fw-bold">
                    <i class="bi bi-person-plus-fill"></i> Hemen Başla
                </a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary btn-lg px-4">
                    Giriş Yap
                </a>
            </div>
        </div>

        <!-- Sağ Sütun (İllüstrasyon) -->
        <div class="col-lg-6 text-center">
            <img class="img-fluid"
                 src="~/img/download.jpeg"
                 alt="Birlikte çalışan öğrenciler illüstrasyonu"
                 width="600">
        </div>

    </div>
</div>