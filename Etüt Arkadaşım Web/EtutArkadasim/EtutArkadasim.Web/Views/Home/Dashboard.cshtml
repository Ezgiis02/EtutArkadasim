@model EtutArkadasim.Web.Models.User
@{
    ViewData["Title"] = "Kontrol Panelim";

    // Controller'dan gelen listeleri alıyoruz
    var userCourses = ViewBag.UserCourses as List<EtutArkadasim.Web.Models.Course>;
    var availableCourses = ViewBag.AvailableCourses as List<EtutArkadasim.Web.Models.Course>;
}

<div class="container py-4 mb-5">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm rounded-4 text-center h-100">
                <div class="card-body p-4">
                    <div class="position-relative d-inline-block mb-3">
                        @{
                            string userInitials = !string.IsNullOrEmpty(Model.Name) ? Model.Name.Substring(0, 1).ToUpper() : "?";
                            string placeholderUrl = $"https://placehold.co/120x120/663399/FFFFFF?text={userInitials}";
                            string finalImageUrl = string.IsNullOrEmpty(Model.ProfileImageUrl) ? placeholderUrl : Model.ProfileImageUrl;
                        }

                        <img src="@finalImageUrl"
                             class="rounded-circle border border-4 border-white shadow-sm"
                             alt="@Model.Name"
                             style="width: 120px; height: 120px; object-fit: cover;"
                             onerror="this.src='https://placehold.co/120x120/663399/FFFFFF?text=?'">
                        <span class="position-absolute bottom-0 end-0 bg-success border border-2 border-white rounded-circle p-2"></span>
                    </div>

                    <h4 class="fw-bold mb-1">
                        @(string.IsNullOrEmpty(Model.Name) ? "İsimsiz Kullanıcı" : Model.Name)
                    </h4>
                    <p class="text-muted small mb-3">@Model.Email</p>

                    <div class="d-flex justify-content-center gap-1 mb-2">
                        @if (!string.IsNullOrEmpty(Model.City))
                        {
                            <span class="badge bg-light text-primary border rounded-pill small">@Model.City</span>
                        }
                        @if (!string.IsNullOrEmpty(Model.District))
                        {
                            <span class="badge bg-light text-info border rounded-pill small">@Model.District</span>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(Model.PreferredLocationsText))
                    {
                        <div class="p-2 mb-3 bg-light rounded-3 border-start border-4 border-primary small italic">
                            <i class="bi bi-building me-1 text-primary"></i>
                            <span class="fst-italic text-dark">"@Model.PreferredLocationsText"</span>
                        </div>
                    }

                    <div class="d-grid gap-2 mt-auto">
                        <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-primary rounded-pill fw-bold">
                            <i class="bi bi-gear-fill me-2"></i>Profili Düzenle
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">

            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm rounded-4 bg-primary text-white h-100">
                        <div class="card-body p-4 d-flex align-items-center justify-content-between">
                            <div>
                                <h6 class="text-white-50 text-uppercase fw-bold mb-2">Ortalama Puan</h6>
                                <h2 class="mb-0 fw-bold display-6">@Model.AverageRating.ToString("F1")</h2>
                            </div>
                            <div class="icon-square bg-white bg-opacity-25 p-3 rounded-circle">
                                <i class="bi bi-star-fill fs-3 text-white"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm rounded-4 bg-success text-white h-100">
                        <div class="card-body p-4 d-flex align-items-center justify-content-between">
                            <div>
                                <h6 class="text-white-50 text-uppercase fw-bold mb-2">Favori Arkadaşlar</h6>
                                <h2 class="mb-0 fw-bold display-6">@Model.FavoriteUserIds.Count</h2>
                            </div>
                            <div class="icon-square bg-white bg-opacity-25 p-3 rounded-circle">
                                <i class="bi bi-heart-fill fs-3 text-white"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @{
                var pendingReqs = ViewBag.PendingRequests as List<dynamic>;
            }
            @if (pendingReqs != null && pendingReqs.Any())
            {
                <div class="card border-0 shadow-sm rounded-4 mb-4 border-start border-4 border-warning">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="fw-bold text-dark mb-0"><i class="bi bi-bell-fill me-2 text-warning"></i>Bekleyen İstekler</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var req in pendingReqs)
                        {
                            <div class="d-flex align-items-center justify-content-between mb-3 border-bottom pb-3 last-no-border">
                                <div class="d-flex align-items-center">
                                    <img src="@(string.IsNullOrEmpty(req.SenderImage) ? "https://placehold.co/50x50?text=U" : req.SenderImage)"
                                         class="rounded-circle me-3" style="width:50px; height:50px; object-fit:cover;">
                                    <div>
                                        <h6 class="fw-bold mb-0">@req.SenderName</h6>
                                        <small class="text-muted">Ders: <span class="text-primary fw-bold">@req.CourseName</span></small>
                                    </div>
                                </div>
                                <div class="d-flex gap-2">
                                    <form asp-controller="Requests" asp-action="AcceptRequest" method="post">
                                        <input type="hidden" name="requestId" value="@req.RequestId" />
                                        <button type="submit" class="btn btn-sm btn-success rounded-pill px-3 fw-bold">
                                            <i class="bi bi-check-lg me-1"></i> Kabul
                                        </button>
                                    </form>
                                    <form asp-controller="Requests" asp-action="RejectRequest" method="post">
                                        <input type="hidden" name="requestId" value="@req.RequestId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                            <i class="bi bi-x-lg"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="fw-bold text-dark mb-0"><i class="bi bi-book-half me-2 text-primary"></i>Derslerim</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddCourse" method="post" class="row g-2 align-items-center mb-4">
                        <div class="col-sm-9">
                            <select name="courseId" class="form-select rounded-3">
                                <option value="">Bir ders seçip ekleyin...</option>
                                @if (ViewBag.AvailableCourses != null)
                                {
                                    foreach (var c in (List<EtutArkadasim.Web.Models.Course>)ViewBag.AvailableCourses)
                                    {
                                        <option value="@c.Id">@c.CourseName (@c.CourseCode)</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-sm-3">
                            <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold">
                                <i class="bi bi-plus-lg"></i> Ekle
                            </button>
                        </div>
                    </form>

                    @if (ViewBag.UserCourses != null && ((List<EtutArkadasim.Web.Models.Course>)ViewBag.UserCourses).Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var course in (List<EtutArkadasim.Web.Models.Course>)ViewBag.UserCourses)
                            {
                                <div class="list-group-item px-0 d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="fw-bold text-dark">@course.CourseName</span>
                                        <span class="text-muted small ms-2">(@course.CourseCode)</span>
                                    </div>
                                    <form asp-action="RemoveCourse" method="post" class="d-inline">
                                        <input type="hidden" name="courseId" value="@course.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger rounded-circle shadow-none">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted opacity-75">
                            <i class="bi bi-journal-x fs-1"></i>
                            <p class="mb-0 mt-2">Henüz hiç ders eklemediniz.</p>
                        </div>
                    }
                </div>
            </div>

            @{
                var friends = ViewBag.Friends as List<EtutArkadasim.Web.Models.User>;
                // Şu an giriş yapmış kişinin ID'si (Puanları boyamak için lazım)
                var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            }
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="fw-bold text-dark mb-0"><i class="bi bi-people-fill me-2 text-info"></i>Çalışma Arkadaşlarım</h5>
                </div>
                <div class="card-body p-0">
                    @if (friends != null && friends.Any())
                    {
                        <div class="list-group list-group-flush rounded-4">
                            @foreach (var friend in friends)
                            {
                                bool isFavorite = Model.FavoriteUserIds.Contains(friend.Id);

                                // BENİM BU KİŞİYE VERDİĞİM PUANI BUL (Yoksa 0)
                                int myVote = 0;
                                if (friend.Ratings != null)
                                {
                                    var ratingObj = friend.Ratings.FirstOrDefault(r => r.RaterUserId == currentUserId);
                                    if (ratingObj != null) myVote = ratingObj.Score;
                                }

                                <div class="list-group-item p-3">
                                    <div class="d-flex align-items-center justify-content-between">

                                        <div class="d-flex align-items-center">
                                            <img src="@(string.IsNullOrEmpty(friend.ProfileImageUrl) ? "https://placehold.co/60x60?text=U" : friend.ProfileImageUrl)"
                                                 class="rounded-circle border border-2 border-white shadow-sm me-3"
                                                 style="width:60px; height:60px; object-fit:cover;">
                                            <div>
                                                <h6 class="fw-bold mb-1">@friend.Name</h6>

                                                <div class="small text-muted mb-2">
                                                    Genel Ort: <span class="fw-bold text-dark">@friend.AverageRating.ToString("F1")</span>
                                                    <span class="text-secondary ms-1" style="font-size:0.75rem">(@friend.Ratings.Count oy)</span>
                                                </div>

                                                <form asp-controller="Rate" asp-action="RateUser" method="post" class="d-inline-block">
                                                    <input type="hidden" name="userId" value="@friend.Id" />
                                                    <div class="d-flex align-items-center bg-light px-2 py-1 rounded-pill border">
                                                        <span class="me-2 small fw-bold text-muted" style="font-size:0.7rem">PUANIN:</span>
                                                        <div class="btn-group" role="group">
                                                            @for (int i = 1; i <= 5; i++)
                                                            {
                                                                // Eğer i, benim verdiğim puana eşit veya küçükse DOLU YILDIZ, değilse BOŞ
                                                                // bi-star-fill (Dolu), bi-star (Boş)
                                                                string starIcon = i <= myVote ? "bi-star-fill text-warning" : "bi-star text-secondary";

                                                                <button type="submit" name="rating" value="@i" class="btn btn-sm p-0 border-0 mx-1 star-hover" title="@i Puan Ver">
                                                                    <i class="bi @starIcon" style="font-size: 1rem;"></i>
                                                                </button>
                                                            }
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>

                                        <div class="d-flex align-items-center gap-2">

                                            <form asp-controller="Requests" asp-action="ToggleFavorite" method="post">
                                                <input type="hidden" name="friendId" value="@friend.Id" />
                                                <button type="submit" class="btn btn-lg border-0 bg-transparent shadow-none"
                                                        title="@(isFavorite ? "Favorilerden Çıkar" : "Favorilere Ekle")">
                                                    <i class="bi @(isFavorite ? "bi-heart-fill text-danger" : "bi-heart text-muted")"
                                                       style="font-size: 1.5rem; transition: all 0.3s;"></i>
                                                </button>
                                            </form>

                                            <form asp-controller="Requests" asp-action="RemoveFriend" method="post" onsubmit="return confirm('Bu arkadaşı silmek istediğine emin misin?');">
                                                <input type="hidden" name="friendId" value="@friend.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm rounded-circle shadow-none"
                                                        style="width: 38px; height: 38px;" title="Arkadaşı Sil">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>

                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted opacity-75">
                            <i class="bi bi-person-plus fs-1"></i>
                            <p class="mb-0 mt-2">Henüz çalışma arkadaşın yok.</p>
                            <a asp-controller="Discover" asp-action="Index" class="btn btn-sm btn-outline-primary mt-3 rounded-pill">Hemen Arkadaş Bul</a>
                        </div>
                    }
                </div>
            </div>

            <style>
                .star-hover i:hover {
                    color: #ffc107 !important;
                    transform: scale(1.2);
                }
            </style>

        </div>
    </div>

    <div style="height: 50px;"></div>
</div>