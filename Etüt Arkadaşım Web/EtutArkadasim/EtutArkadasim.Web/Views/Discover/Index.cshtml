@using EtutArkadasim.Web.Models
@model EtutArkadasim.Web.ViewModels.DiscoverViewModel
@{
    ViewData["Title"] = "Çalışma Arkadaşı Keşfet";
}

<div class="container py-4">
    <div class="text-center mb-4">
        <h2 class="fw-bold"><i class="bi bi-search text-primary"></i> @ViewData["Title"]</h2>
        <p class="text-muted">Seninle aynı dersleri alan çalışma arkadaşlarını bul.</p>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success d-inline-block px-4 shadow-sm rounded-pill">
                <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger d-inline-block px-4 shadow-sm rounded-pill">
                <i class="bi bi-exclamation-circle-fill me-2"></i>@TempData["ErrorMessage"]
            </div>
        }
    </div>

    <div class="row">
        @if (Model == null || Model.Users == null || !Model.Users.Any())
        {
            <div class="col-12 text-center py-5">
                <div class="alert alert-light shadow-sm rounded-4 border-0">
                    <i class="bi bi-person-dash display-1 text-muted opacity-50"></i>
                    <p class="mt-3 fs-5 fw-bold">Henüz görüntülenecek kullanıcı bulunamadı.</p>
                </div>
            </div>
        }
        else
        {
            @foreach (var match in Model.Users)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm rounded-4 hover-shadow transition-all">
                        <div class="card-body p-4 text-center">

                            <div class="position-relative d-inline-block mb-3">
                                @{
                                    string displayName = !string.IsNullOrEmpty(match.User.Name) ? match.User.Name : "İsimsiz Kullanıcı";
                                    string userInitials = !string.IsNullOrEmpty(match.User.Name) ? match.User.Name.Substring(0, 1).ToUpper() : "?";
                                    string placeholderUrl = $"https://placehold.co/120x120/663399/FFFFFF?text={userInitials}";
                                    string finalImageUrl = string.IsNullOrEmpty(match.User.ProfileImageUrl) ? placeholderUrl : match.User.ProfileImageUrl;
                                }
                                <img src="@finalImageUrl" class="rounded-circle border border-3 border-white shadow-sm" style="width:110px; height:110px; object-fit: cover;" onerror="this.src='https://placehold.co/120x120/663399/FFFFFF?text=?'">
                            </div>
                            <h5 class="fw-bold mb-1">@displayName</h5>
                            <p class="text-primary small fw-bold mb-3"><i class="bi bi-mortarboard-fill me-1"></i> @match.DepartmentName</p>

                            <div class="bg-light rounded-3 p-3 mb-3 text-start">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="text-danger me-2"><i class="bi bi-geo-alt-fill"></i></div>
                                    <div>
                                        <small class="text-muted d-block" style="font-size: 0.75rem;">Konum</small>
                                        <span class="fw-bold text-dark" style="font-size: 0.9rem;">
                                            @if (!string.IsNullOrEmpty(match.User.City))
                                            {
                                                @match.User.City @if(!string.IsNullOrEmpty(match.User.District)) {
                                                <span>/ @match.User.District</span>
                                            }
     } else
    {
                                            <span class="text-muted fst-italic">Belirtilmemiş</span>
                                        }
                                    </span>
                                </div>
                            </div>
                            <div class="d-flex align-items-center">
                                <div class="text-warning me-2"><i class="bi bi-shop"></i></div>
                                <div>
                                    <small class="text-muted d-block" style="font-size: 0.75rem;">Tercih Ettiği Yer</small>
                                    <span class="fw-bold text-dark" style="font-size: 0.9rem;">
                                        @(string.IsNullOrEmpty(match.User.PreferredLocationsText) ? "Fark etmez" : match.User.PreferredLocationsText)
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="mt-auto">
                            <form asp-controller="Requests" asp-action="SendRequest" method="post">

                                <input type="hidden" name="receiverId" value="@match.User.Id" />

                                <div class="mb-2 text-start">
                                    <label class="small fw-bold mb-1 text-muted">Ortak Dersler (@match.CommonCoursesCount):</label>

                                    <select name="courseId" class="form-select form-select-sm rounded-3" required>
                                        @if (match.CommonCourses != null && match.CommonCourses.Any())
                                        {
                                            <option value="">Bir ders seçin...</option>
                                            foreach (var course in match.CommonCourses)
                                            {
                                                <option value="@course.Id">@course.CourseName</option>
                                            }
                                        }
                                        else
                                        {
                                            <option value="" disabled selected>Ortak ders yok</option>
                                        }
                                    </select>
                                </div>

                                <button type="submit" class="btn btn-primary w-100 py-2 fw-bold rounded-pill shadow-sm"
                                        @(match.CommonCoursesCount == 0 ? "disabled" : "")>
                                    <i class="bi bi-send-plus-fill me-1"></i> Talep Gönder
                                </button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        }
                }
    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,0.175) !important;
    }

    .transition-all {
        transition: all 0.3s ease;
    }
</style>