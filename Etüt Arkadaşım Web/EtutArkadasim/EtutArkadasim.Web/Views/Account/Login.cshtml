@model EtutArkadasim.Web.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <section>
            <form asp-action="Login" method="post">
                <h4>Oturum açmak için bilgilerinizi girin.</h4>
                <hr />

                <!-- Kayıt başarılıysa, TempData'daki mesajı burada göster -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <!-- Genel Hata Mesajı (örn: "Geçersiz e-posta veya şifre") -->
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <!-- E-posta Alanı -->
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="eposta@adres.com" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Şifre Alanı -->
                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control" type="password" placeholder="Şifre" />
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- (İsteğe bağlı: "Beni Hatırla?" Checkbox'ı) -->
                <!-- Giriş Yap Butonu -->
                <div class="mb-3">
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Giriş Yap</button>
                </div>

                <div class="text-center">
                    <p>
                        Hesabınız yok mu? <a asp-action="Register">Kayıt Olun</a>.
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

<!-- İstemci tarafı (JavaScript) doğrulamaları -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}